<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailsActivity">


    <ImageView

        android:id="@+id/eventDetailsImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        app:layout_collapseMode="parallax" />




    <FrameLayout
        android:id="@+id/frameLayout5"
        android:alpha="0"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/gradient_bg">


    </FrameLayout>
    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView5"
        android:layout_width="match_parent"
        android:alpha="0"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/participated"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="75dp"
                android:background="@drawable/circle_textview"
                android:text="Participated"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/participate"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="75dp"
                android:background="@drawable/circle_grey_textview"
                android:text="Participate"
                android:textAllCaps="false"
                android:textColor="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="9dp"
                    app:cardUseCompatPadding="true">


                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="164dp">

                        <ImageView
                            android:id="@+id/share"
                            android:layout_width="38dp"
                            android:layout_height="39dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"

                            android:src="@drawable/ic_share"
                            android:textAllCaps="false"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView

                            android:id="@+id/eventDetailsName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="60dp"
                            android:text="Good Bye Summer"
                            android:textColor="@color/dark_grey"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/countdown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="Event starts in "
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/eventDetailsName" />

                        <TextView
                            android:id="@+id/eventDetailsDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="132dp"
                            android:layout_marginTop="40dp"
                            android:text="10 january 2018"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"

                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="From"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/entranceLabel"
                            app:layout_constraintStart_toEndOf="@+id/clockLogo" />

                        <TextView
                            android:id="@+id/eventStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginBottom="8dp"

                            android:text="15 PM"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/eventEntrance"
                            app:layout_constraintStart_toEndOf="@+id/from" />

                        <TextView
                            android:id="@+id/to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="to"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/eventEntrance"
                            app:layout_constraintStart_toEndOf="@+id/eventStartTime" />

                        <TextView
                            android:id="@+id/eventEndTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"

                            android:layout_marginBottom="8dp"
                            android:text="05 AM"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/alchoolLabel"
                            app:layout_constraintStart_toEndOf="@+id/to" />

                        <ImageView

                            android:id="@+id/clockLogo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_clock"
                            app:layout_constraintBottom_toTopOf="@+id/entranceLabel"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/entranceLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"

                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Entrance :"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/eventEntrance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Free"
                            android:textColor="@color/seek_green"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/entranceLabel" />


                        <TextView
                            android:id="@+id/alchoolLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Alcohol :"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/alchool" />

                        <TextView
                            android:id="@+id/alchool"
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_marginEnd="72dp"
                            android:layout_marginBottom="8dp"
                            android:text="Nope"

                            android:textColor="@color/material_red_500"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />


                    </android.support.constraint.ConstraintLayout>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:background="@color/white"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="9dp"
                    app:cardUseCompatPadding="true">


                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/toestab"
                        android:layout_width="364dp"
                        android:layout_height="107dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:drawableLeft="@drawable/ic_map_tag"

                            android:text="Location : "
                            android:textSize="12dp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/eventEstabName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="40dp"
                            android:text="Billionnaire"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="17sp"

                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/eventEstabImage"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView

                            android:id="@+id/eventEstabImage"
                            android:layout_width="72dp"
                            android:layout_height="64dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/resto3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/eventEstabRegion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="24dp"
                            android:text="Gammarth"
                            android:textSize="13sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/eventEstabImage" />


                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:background="@color/white"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="9dp"
                    app:cardUseCompatPadding="true">


                    <android.support.constraint.ConstraintLayout
                        android:layout_width="364dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/descLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="Description :"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/eventDescription"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:padding="10dp"
                            android:text="13 nahj el ward arianaarianaarianaarianaarianianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaarianaariana"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/descLabel" />

                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/progressDetails5"
        style="@style/AVLoadingIndicatorView.Large"
        android:layout_width="79dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        app:indicatorColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
